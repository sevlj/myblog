<div class="container">
  <div class="row">
<h1> <b> Blog </b> </h1> <p>
</p> </div>
<div class="row"
<p>  <h2>Articles List</h2> </p>
</div>
<div class="row">
<%= link_to 'New article', new_article_path, {class: "btn btn-outline-success btn-block"} %>
<p> </div>
</div>

<table class="table">
  <thead>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="8"></th>
  </tr> </thead>

<tbody>
  <% @articles.each do |article| %>
    <tr>
        <td><%= article.title %></td>
            <td><%= article.text %></td>
          <td><%= link_to 'Show', article_path(article), { class: "btn btn-primary"} %></td>
        <td><%= link_to 'Edit', edit_article_path(article), {class: "btn btn-secondary"} %></td>
        <td><%= link_to 'Delete Article', article_path(article),
                method: :destroy,
                data: { confirm: 'Are you sure?' } %></td>
        </tr>
      </tbody>
  <% end %>
</table>
</div>
